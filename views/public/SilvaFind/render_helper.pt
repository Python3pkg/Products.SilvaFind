<tal:block
  define="
    model request/ghost_model | request/model;
    public options/public | nothing;
    title_method python: test(public, 'get_title', 'get_title_editable');
    append_to_url options/append_to_url | string:edit/tab_edit;
    " >

    <h2 class="heading"
      tal:content="model/get_title">
        Title
    </h2>
    
  <p class="searchResults">
    Search Results

      <!--    url string:${item/absolute_url}/${append_to_url}" -->
  </p>
  <div>
    <tal:criteria repeat="fieldView model/getFieldViews">
      <tal:one define="value fieldView/getValue" condition="value">
        <span tal:content="fieldView/getTitle" /> :
        <span tal:content="value" />;
      </tal:one>
    </tal:criteria>
  </div>

  <p tal:repeat="item model/search">
      <tal:columns repeat="columnId model/getResultsColumnIds">
        <span tal:content="item/?columnId" />&nbsp;
      </tal:columns>
  </p>    
</tal:block>
