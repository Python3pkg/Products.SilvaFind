<html tal:omit-tag=""
  tal:define="
    view here;
    model request/model;
    root_url model/get_root_url;
    title model/get_title_editable;
    vein string:edit;
    "
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="silva"
    >

<table class="columns columns3">
  <tbody>
    <tr>
      <tal:block replace="nothing">
        _____________________ sidebar _____________________
      </tal:block>
      <td class="left"
        tal:define="template_id string:tab_edit">
        <metal:block use-macro="view/macro_vein_navigation/macros/vein" />
      </td>

      <tal:block replace="nothing">
        _____________________ main _____________________
      </tal:block>
      <td>

<form action="manage_edit" method="post">
<table class="listing">
  <thead>
    <tal:block replace="nothing">
      ______________ vein + title row ______________
    </tal:block>
    <tr>
      <td class="top" colspan="4">
        <h2>
          <img tal:replace="structure python:view.render_icon(model)" />
          <tal:block i18n:translate="">silva find
          &#xab;<tal:block content="model/get_title_or_id" i18n:name="title_or_id"/>&#xbb;</tal:block>
        </h2>
      </td>
    </tr>
    <tr class="top-controls">
      <td colspan="4">
        <h3>
          <tal:block i18n:translate="">search content for
          &#xab;<tal:block content="model/get_title_or_id" i18n:name="title_or_id"/>&#xbb;</tal:block>
        </h3>
      </td>
    </tr>
    <tr>
      <th i18n:translate="" width="2%"></th>
      <th class="align-right"
        width="12%"
        i18n:translate="">
        element
      </th>
      <th i18n:translate="">
        content
      </th>
      <th width="25%"
        i18n:translate="">
        note
      </th>
    </tr>
  </thead>
  <tbody>
    <tal:block tal:repeat="fieldView model/getFieldViews">
    <tr tal:define="iterate repeat/fieldView/odd"
        tal:attributes="class python:iterate and 'odd' or 'even'">
      <td class="align-center">
         <input type="checkbox"
           tal:condition="fieldView/canBeShown"
           tal:attributes="
             name string:show_${fieldView/getName}:bool;
             checked python:model.isCriterionShown(fieldView.getName());
         " />
      </td>
      <td class="align-right">
        <label tal:content="fieldView/getTitle"
          tal:attributes="for python:fieldView.getName().split('-')[-1]"
          i18n:translate="">
          a search object
        </label>
      </td>
      <td tal:content="structure fieldView/renderEditWidget">
        a search object
      </td>
      <td>
        <tal:block content="structure fieldView/getDescription" i18n:translate="">
          element description
        </tal:block>
      </td>
    </tr>
    </tal:block>
    <tr class="controls">
      <td class="align-right" colspan="4">
         <input type="submit" value="save" class="button" accesskey="s" title="access key: alt-s" i18n:attributes="value;title" />
      </td>
    </tr>
    <tr>
      <td class="divider" colspan="4" style="background: rgb(197, 212, 202) none repeat scroll 0%; -moz-background-clip: -moz-initial; -moz-background-origin: -moz-initial; -moz-background-inline-policy: -moz-initial;">
      </td>
    </tr>
    <tr class="top-controls">
      <td colspan="4">
        <h3>
          <tal:block i18n:translate="">search results for
          &#xab;<tal:block content="model/get_title_or_id" i18n:name="title_or_id"/>&#xbb;</tal:block>
        </h3>
      </td>
    </tr>
    <tr>
      <th i18n:translate="" width="2%"></th>
      <th class="align-right"
        width="12%"
        i18n:translate="">
        element
      </th>
      <th i18n:translate="">
        metadata set and field id
      </th>
      <th width="25%"
        i18n:translate="">
        note
      </th>
    </tr>
    <tal:block tal:repeat="resultView model/getResultFieldViews">
    <tr tal:define="iterate repeat/resultView/odd"
        tal:attributes="class python:iterate and 'odd' or 'even'">
      <td>
         <input type="checkbox"
            tal:attributes="
              name string:show_result_${resultView/getName}:bool;
              checked python:model.isResultShown(resultView.getName());
              id string:show_result_${resultView/getName};
          " />
      </td>
      <td class="align-right">
        <label tal:content="resultView/getTitle"
          tal:attributes="for string:show_result_${resultView/getName}"
          i18n:translate="">
          a search object
        </label>
      </td>
      <td tal:content="resultView/getId">
        a search object
      </td>
      <td>
        <tal:block content="structure resultView/getDescription" i18n:translate="">
          element description
        </tal:block>
      </td>
    </tr>
    </tal:block>
  </tbody>

  <tfoot>
    <tr>
      <th colspan="4" tal:define="select_id string:show_result_">
        <metal:plug use-macro="view/macro_select_all/macros/select_all"/>
        &nbsp;Show the content of the checked fields in the search results.
      </th>
    </tr>
    <tr class="controls">
      <td class="align-right" colspan="4">
         <input type="submit" value="save" class="button" title="access key: alt-s" i18n:attributes="value;title" />
      </td>
    </tr>
  </tfoot>
</table>
</form>

      </td>

      <tal:block replace="nothing">
        _____________________ right column _____________________
      </tal:block>
      <td class="right">
        &nbsp;
      </td>
    </tr>
  </tbody>
</table>

</html>
