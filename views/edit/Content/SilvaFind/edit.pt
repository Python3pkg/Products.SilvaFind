<html tal:omit-tag=""
  tal:define="
    view here;
    model request/model;
    root_url model/get_root_url;
    title model/get_title_editable;
    vein string:edit;
    "
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="silva"
    >

<table class="columns columns3">
  <tbody>
    <tr>
      <tal:block replace="nothing">
        _____________________ sidebar _____________________
      </tal:block>
      <td class="left"
        tal:define="template_id string:tab_edit">
        <metal:block use-macro="view/macro_vein_navigation/macros/vein" />
      </td>

      <tal:block replace="nothing">
        _____________________ main _____________________
      </tal:block>
      <td>

<form action="manage_edit" method="POST">
<table class="listing">
  <thead>
    <tal:block replace="nothing">
      ______________ vein + title row ______________
    </tal:block>
    <tr>
      <td class="top" colspan="3">
        <h2>
          <img tal:replace="structure python:view.render_icon(model)" />
          <tal:block i18n:translate="">search content
          &#xab;<tal:block content="model/get_title_or_id" i18n:name="title_or_id"/>&#xbb;</tal:block>
        </h2>
      </td>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="fieldView model/getFieldViews">
      <td tal:content="fieldView/getTitle">
        A search object.
      </td>
      <td tal:content="structure fieldView/renderEditWidget">
        A search object.
      </td>
      <td>
         <input type="checkbox"
                tal:attributes="name string:show_${fieldView/getName}:bool;
                                checked python:model.isShown(fieldView.getName())"
                />
      </td>
    </tr>
  </tbody>

  <tfoot>
    <tr class="controls">
      <td class="align-right" colspan="3">
         <input type="submit" value="Save" class="button" />
      </td>
    </tr>
  </tfoot>
</table>
</form>

      </td>

      <tal:block replace="nothing">
        _____________________ right column _____________________ 
      </tal:block>
      <td class="right">        
        &nbsp;
      </td>
    </tr>
  </tbody>
</table>

</html>
